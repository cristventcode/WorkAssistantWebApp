@model IEnumerable<WorkLibrary.WorkDay>


<div class="row">
    <br />
    <div class="container">
        <h4> New </h4>
        <a href="~/Work/Create"><button class="btn btn-xs btn-success">Create New Day</button></a>
        <hr />
        <h4> Recent Days </h4>
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item"> @item.Day - @item.Date.ToShortDateString() </li>
            }
        </ul>
        <a href="~/Work/Index"><button class="btn btn-xs">All History</button></a>
    </div>
</div>