@model WorkLibrary.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="MlnCurrent">Mln Current</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MlnCurrent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MlnCurrent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="MlnPrevious">Mln Previous</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MlnPrevious, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MlnPrevious, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="OurLot">Our Lot</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.OurLot, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OurLot, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Category">Category</label>
            <div class="col-md-10">
                <select class="form-control" id="Category" name="Category">
                    <option>Ingredient</option>
                    <option>Vegetable Oil</option>
                    <option>Butter</option>
                    <option>Beeswax</option>
                    <option>Clay Mud & Salt</option>
                    <option>Colors</option>
                    <option>Essential Oil</option>
                    <option>Fragrant Oil</option>
                    <option>N/A</option>
                </select>
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { productCategory = "All" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
